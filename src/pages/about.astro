---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";

const pageTitle = "About Myself";

const identity = {
  firstName: "Ciptadi",
  country: "Konoha",
  occupation: "Ninja",
  hobbies: ["sleeping", "drinking", "eating"],
};

const skills = [
  "Stealth",
  "Swordsmanship",
  "Ninjutsu",
  "Shurikenjutsu",
  "Acrobatics",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textTransform = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style is:global define:vars={{ skillColor, fontWeight, textTransform }}>
    h1 {
      color: red;
      font-size: 4rem;
    }

    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textTransform);
    }
  </style>
  <h2>... and my new Astro site!</h2>

  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}</li>
    <li>
      I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    <li>
      My hobbies are:
      <ul>
        {identity.hobbies.map((hobby) => <li>{hobby}</li>)}
      </ul>
    </li>
  </ul>

  <p>My Skills:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</BaseLayout>
